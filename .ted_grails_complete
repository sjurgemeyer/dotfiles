#Copied from https://bitbucket.org/tednaleid/shared-zshrc/src/tip/zshrc_grails_compinstall with slight modifications
_property_value() {
    grep $1 application.properties | sed -E 's/(.*)=(.*)$/\2/'
}

_grails_version() {
        _property_value app.grails.version
}

_grails_project_name() {
    _property_value app.name
}

_grails_script_dirs() {
        local SCRIPT_DIRS="$HOME/app/grails-$(_grails_version)/scripts $HOME/.grails/scripts ./scripts"
        for PLUGIN_DIR in $HOME/.grails/$(_grails_version)/projects/$(_grails_project_name)/plugins/*/scripts; do
                SCRIPT_DIRS="$SCRIPT_DIRS $PLUGIN_DIR"
        done
        echo $SCRIPT_DIRS
}

_grails_scripts() {     
        for D in $(_grails_script_dirs); do
                if [ -d $D ]
                        then ls -1 $D/* | grep -e ".groovy$" | sed -E 's/(.*)\/(.*)\.groovy$/\2/' | sed -E 's/([A-Z])/-\1/g' | sed -E 's/^-//' | tr "[:upper:]" "[:lower:]"
                fi
        done | sort | uniq | grep -vE "^_"      
}

_grails_tests() {
        if [ -d test ] 
                then ls -1 test/**/*Tests.* | sed -E 's/(test\/[^\/]*\/).*\/([^\/]+)(Tests.*)/\2/' | uniq | tr \/ .
    fi  
}

_grails() {
        if (( CURRENT == 2 )); then
                scripts=( $(_grails_scripts) )
                _sep_parts scripts
    else
                tests=( $(_grails_tests) )
        _multi_parts . tests
        fi
}

compdef _grails grails

